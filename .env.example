# Environment variables for Portfolio Backend API

# OpenAI API Key (required for embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Project settings
PROJECT_NAME=Portfolio Backend API
VERSION=1.0.0

# S3 settings
S3_BUCKET_NAME=portfolio

# Vector store settings
VECTOR_STORE_DIR=vectorstores/portfolio_index
HASH_FILE=vectorstores/portfolio_hashes.json
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
EMBEDDING_MODEL=text-embedding-3-small

# Search settings
MAX_RESULTS=5
SIMILARITY_THRESHOLD=0.7
